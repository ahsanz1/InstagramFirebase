<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.ahsanz.instagramfirebase.NewPostActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:id="@+id/imageLinear"
        android:orientation="vertical"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/selectImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            app:srcCompat="@drawable/add_post_image" />

    </LinearLayout>

<LinearLayout
    android:id="@+id/baqiStuff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/imageLinear"
    android:layout_gravity="center">

    <EditText
        android:id="@+id/caption"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Say something about this photo!"
        android:inputType="textShortMessage"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/addPost"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="something"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_gravity="center" />

</LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
